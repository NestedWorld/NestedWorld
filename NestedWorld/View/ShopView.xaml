<UserControl
    x:Class="NestedWorld.View.ShopView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NestedWorld.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:NestedWorld.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:NestedWorld.View.ShopViews"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" x:Name="MainGrid">
      
        <view:ShopGroupeListView x:Name="GroupeListView" Margin="0,0,10,0" />
        <view:ShopElementListView x:Name="ElementListView" Margin="0,0, 10, 0"/>
        <view:ShopElementInformation x:Name="ElementInformation"/>
    </StackPanel>
</UserControl>

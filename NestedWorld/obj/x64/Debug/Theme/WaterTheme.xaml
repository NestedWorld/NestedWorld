<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Color x:Key="background">#FFFFFF</Color>
    <Color x:Key="BleuTwo">#2196F3</Color>
    <Color x:Key="BleuOne">#0D47A1</Color>
    <Color x:Key="foreground">#616668</Color>
    <Color x:Key="BleuThree">#E3F2FD</Color>

    <SolidColorBrush x:Key="BackrgoundBrush" Color="{StaticResource background}"/>
    <SolidColorBrush x:Key="BleuTwoBrush" Color="{StaticResource BleuTwo}"/>
    <SolidColorBrush x:Key="BleuOneBrush" Color="{StaticResource BleuOne}"/>
    <SolidColorBrush x:Key="ForgroundBrush" Color="{StaticResource foreground}"/>
    <SolidColorBrush x:Key="BleuThreeBrush" Color="{StaticResource BleuThree}"/>
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{StaticResource background}"/>


</ResourceDictionary>


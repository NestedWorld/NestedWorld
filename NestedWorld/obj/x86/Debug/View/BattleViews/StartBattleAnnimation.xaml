<UserControl
    x:Class="NestedWorld.View.BattleViews.StartBattleAnnimation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NestedWorld.View.BattleViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="{StaticResource background}"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="2">
                <Rectangle.Fill>
                    <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/iconTest2.jpg"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="2" Fill="#7F000000"/>
            <Grid Grid.Row="1" Grid.Column="1">
                
            </Grid>
        </Grid>
        <Ellipse Grid.RowSpan="2" Height="69" Width="69" Fill="White">
        </Ellipse>
        <Ellipse Grid.RowSpan="2" Height="70" Width="70" StrokeThickness="2">
            <Ellipse.Fill>
                <ImageBrush ImageSource="ms-appx:///Assets/NestedWorldLogo.png" ></ImageBrush>
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <SolidColorBrush Color="{StaticResource foreground}"/>
            </Ellipse.Stroke>
        </Ellipse>
    </Grid>
</UserControl>

